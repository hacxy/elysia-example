generator client {
  provider   = "prisma-client"
  output     = "../src/generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator prismabox {
  provider                    = "prismabox"
  typeboxImportDependencyName = "elysia"
  typeboxImportVariableName   = "t"
  inputModel                  = true
  output                      = "../src/generated/prismabox"
}

// 角色表
model Role {
  id          Int      @id @default(autoincrement())
  name        String   @unique // 角色名称，如 "ADMIN", "USER"
  description String? // 角色描述
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // 关联到用户角色表
  userRoles UserRole[]

  @@map("elysia_role")
}

// 用户表
model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 关联到用户角色表（一个用户只能有一个角色）
  userRole UserRole?

  @@map("elysia_user")
}

// 用户-角色关联表
// 一个用户只能有一个角色，一个角色可以分配给多个用户
model UserRole {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique // 一个用户只能有一个角色，所以 userId 唯一
  roleId    Int // 角色 ID
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 关联到用户表
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  // 关联到角色表
  role Role @relation(fields: [roleId], references: [id], onDelete: Restrict)

  // 添加索引以提高查询性能
  @@index([roleId])
  @@map("elysia_user_role")
}
